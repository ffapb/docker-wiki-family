#!/bin/bash
# https://github.com/docker-library/healthcheck/blob/master/mysql/Dockerfile

set -eo pipefail

if [ "$MYSQL_RANDOM_ROOT_PASSWORD" ] && [ -z "$MYSQL_USER" ] && [ -z "$MYSQL_PASSWORD" ]; then
	# there's no way we can guess what the random MySQL password was
	echo >&2 'healthcheck error: cannot determine random root password (and MYSQL_USER and MYSQL_PASSWORD were not set)'
	exit 0
fi

host="db"
user="${MYSQL_USER:-root}"
export MYSQL_PWD="${MYSQL_PASSWORD:-$MYSQL_ROOT_PASSWORD}"

args=(
	# force mysql to not use the local "mysqld.sock" (test "external" connectibility)
	-h"$host"
	-u"$user"
	--silent
)

QUERY="select count(*) as n from watchlist"
if select="$(echo '$QUERY' | mysql "${args[@]}" -D wiki_ffa_re_pnp)" && [ "$select" = '0' ]; then
  if select="$(echo '$QUERY' | mysql "${args[@]}" -D wiki_ffa_pb_pnp)" && [ "$select" = '0' ]; then
  	exit 0
  fi
fi

exit 1
